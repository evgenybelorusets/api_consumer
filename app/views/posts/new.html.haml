.well
  = simple_form_for :post, url: posts_path do |f|
    .form-group
      = f.input :title, input_html: { class: 'form-control' }
    .form-group
      = f.input :content, as: :text, input_html: { class: 'form-control' }
    .form-group
      = link_to 'Cancel', root_path, class: 'btn btn-primary'
      = f.submit 'Create', class: 'btn btn-warning'