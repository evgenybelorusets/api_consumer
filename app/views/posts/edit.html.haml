.well
  = simple_form_for post do |f|
    .form-group
      = f.input :title, required: true, input_html: { class: 'form-control' }
    .form-group
      = f.input :content, as: :text, required: true, input_html: { class: 'form-control' }
    .form-group
      = post_link(post, 'Cancel')
      = f.submit 'Update', class: 'btn btn-warning'